@using testdatamodel.Models
@{
        ViewBag.Title = "EditQA";
        Layout = "~/Areas/Back/Views/Shared/_Layout.cshtml";
    }

<div class="card">
    <div class="card-header">
        <h5>編輯QA</h5>
    </div>
    <div class="card-block">
        <form method="post" action="@Url.Action("EditQA")">
         <input type="hidden" name="artId" value="@ViewData["artID"]"/>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Placeholder</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="@ViewData["artTitle"]" name="title">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">內容</label>
                <div class="col-sm-10">
                    @Html.TextArea("ContentText", @ViewData["artMain"].ToString(), new { id = "ContentText", @name = "ContentText" })
                     </div>
            </div>
            <div>
            <button type="submit" class="btn btn-success waves-effect waves-light">送出</button>
            </div>
      
        </form>

    </div>
</div>



      @section Scripts{
          @Scripts.Render("~/bundles/jqueryval")
          <script src="~/Scripts/ckeditor/ckeditor.js"></script>
          <script type="text/javascript" language="javascript">
                                                  var editor = CKEDITOR.editor.replace('ContentText', { skin: 'kama', width: '750px' });
      </script>
      }

